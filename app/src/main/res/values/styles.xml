<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/coolRed</item>
        <item name="colorPrimaryDark">@color/darkGray</item>
        <item name="colorAccent">@color/offWhite</item>

        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="WhereuatActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/darkGray</item>
        <item name="android:background">@color/offWhite</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColorHint">@color/darkGray</item>
        <item name="colorPrimary">@color/offBlack</item>
        <item name="colorAccent">@color/coolRed</item>
    </style>
</resources>
